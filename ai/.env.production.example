# ==============================================
# SINABE AI - Production Configuration (8GB RAM)
# ==============================================

# Server Configuration
PORT=4080
NODE_ENV=production
CORS_ORIGIN=https://sinabe.giize.com

# ==============================================
# MySQL Connection
# ==============================================
# Si MySQL est√° en el mismo servidor (sin Docker)
MYSQL_HOST=localhost
# Si conectas desde Docker al MySQL del host
# MYSQL_HOST=host.docker.internal
MYSQL_PORT=3306
MYSQL_USER=sinabe_read
MYSQL_PASSWORD=CHANGE_THIS_PASSWORD
MYSQL_DATABASE=sinabe_db

# ==============================================
# FASE A: Heuristic Mode (Recommended for 8GB)
# ==============================================
USE_OLLAMA=false
ENABLE_QDRANT=false

# ==============================================
# Safety & Pagination Limits
# ==============================================
MAX_LIMIT=200
DEFAULT_LIMIT=50
DEFAULT_ONLY_ENABLED=true
