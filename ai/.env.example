# ==============================================
# SINABE AI - Configuration
# ==============================================

# Server Configuration
PORT=4080
NODE_ENV=production
# Comma-separated list of allowed origins (or * for all)
CORS_ORIGIN=http://localhost:5173,http://localhost:4000

# ==============================================
# MySQL Connection (REQUIRED)
# ==============================================
# Use read-only credentials for safety
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=sinabe_read
MYSQL_PASSWORD=change_me
MYSQL_DATABASE=sinabe_db

# ==============================================
# PHASE A: Heuristic Mode (No LLM - Fastest)
# ==============================================
# Set to false for pure rule-based parsing (fastest, uses ~50MB RAM)
USE_OLLAMA=false
ENABLE_QDRANT=false

# ==============================================
# PHASE B: LLM Interpreter Mode (Optional)
# ==============================================
# Enable Ollama for natural language understanding
# USE_OLLAMA=true
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_CHAT_MODEL=llama3.2:3b
# OLLAMA_EMBED_MODEL=nomic-embed-text

# ==============================================
# PHASE C: Semantic Search (Optional)
# ==============================================
# Enable Qdrant for vector similarity search
# Requires USE_OLLAMA=true for embeddings
# ENABLE_QDRANT=true
# QDRANT_URL=http://localhost:6333
# QDRANT_COLLECTION=sinabe_inventories
# QDRANT_TOPK=60

# ==============================================
# Safety & Pagination Limits
# ==============================================
MAX_LIMIT=200
DEFAULT_LIMIT=50

# If true, only show enabled=true inventories unless explicitly requested
DEFAULT_ONLY_ENABLED=true
