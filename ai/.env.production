# ==============================================
# SINABE AI - Production (Ubuntu Server)
# ==============================================
# IMPORTANTE: Con 8GB RAM, usar modo heurístico
# Cuando tengas 32GB, puedes activar LLM

# Server Configuration
PORT=4080
NODE_ENV=production
CORS_ORIGIN=https://sinabe.giize.com

# ==============================================
# MySQL Connection (Directo al servidor, sin Docker)
# ==============================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=sinabe_read
MYSQL_PASSWORD=TU_PASSWORD_AQUI
MYSQL_DATABASE=sinabe_db

# ==============================================
# LLM Configuration
# ==============================================
# Para 8GB RAM: DESACTIVAR LLM
USE_OLLAMA=false

# Para 32GB RAM: ACTIVAR estas líneas
# USE_OLLAMA=true
# OLLAMA_BASE_URL=http://sinabe-ollama:11434
# OLLAMA_CHAT_MODEL=llama3.2:3b
# OLLAMA_TIMEOUT=30000

# ==============================================
# Semantic Search (Qdrant)
# ==============================================
# Para 8GB RAM: DESACTIVAR
ENABLE_QDRANT=false

# Para 32GB RAM: ACTIVAR
# ENABLE_QDRANT=true
# QDRANT_URL=http://sinabe-qdrant:6333
# OLLAMA_EMBED_MODEL=nomic-embed-text

# ==============================================
# Safety & Pagination Limits
# ==============================================
MAX_LIMIT=200
DEFAULT_LIMIT=50
DEFAULT_ONLY_ENABLED=true
