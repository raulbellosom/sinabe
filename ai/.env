# ==============================================
# SINABE AI - Local Development (Windows + Docker)
# ==============================================
# Con LLM activado para pruebas locales

# Server Configuration
PORT=4080
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173,http://localhost:4000

# ==============================================
# MySQL Connection
# ==============================================
# En Windows con Docker, usa host.docker.internal para conectar
# al MySQL que corre en otro contenedor o en el host
MYSQL_HOST=host.docker.internal
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_DATABASE=sinabe_db

# ==============================================
# LLM Configuration (Ollama)
# ==============================================
USE_OLLAMA=true
OLLAMA_BASE_URL=http://sinabe-ollama:11434
OLLAMA_CHAT_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=30000

# ==============================================
# Semantic Search (Qdrant) - Desactivado por ahora
# ==============================================
ENABLE_QDRANT=false

# ==============================================
# Safety & Pagination Limits
# ==============================================
MAX_LIMIT=200
DEFAULT_LIMIT=50
DEFAULT_ONLY_ENABLED=true
